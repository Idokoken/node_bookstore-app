<div class="register">
  <div class="brand-logo">
    <img
      src="/images/brand.png"
      alt="brand"
      class="d-inline-block align-text-top me-1"
    />
  </div>
  <div class="brand-title">AllVoice</div>

  <h3 class="mt-3 text-center">Create Account</h3>

  <form action="/auth/register" method="post" class="input">
    <div class="mb-3">
      <label for="firstname" class="form-label">Username</label>
      <input type="text" class="form-control" name="username" />
    </div>
    <div class="mb-3">
      <label for="Email" class="form-label">Email</label>
      <input type="email" class="form-control" name="email" />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <div class="mt-3">
    <p class="">
      Already have an acoount? <a href="/auth/login" class="">Login</a>
    </p>
  </div>
</div>
