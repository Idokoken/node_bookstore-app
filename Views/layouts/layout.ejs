    <main>
      <div class="container-fluid">
        <div class="bg-success"><%- messages() %></div>
        <%- body %>
      </div>
    </main>

    <!-- footer section -->
    <footer>
      <div class="footer">
        <p class="text-center">
          TechBook &copy; 2020 | <a href="/manage">manage</a>
        </p>
      </div>
