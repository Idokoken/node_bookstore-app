<div class="container my-3">
  <h3 class="my-3">Update book category</h3>
  <form action="/category/edit/<%= category._id %> " method="post">
    <div class="form-group row">
      <label for="name"
        >Name
        <input
          type="text"
          class="form-control"
          type="text"
          name="name"
          value="<%= category.name %>"
        />
      </label>
    </div>
    <div class="form-group mb-3">
      <label class="form-label" for="icon">Icon</label>
      <input
        type="text"
        class="form-control"
        name="icon"
        value="<%= category.icon %>"
      />
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <input type="submit" class="btn btn-primary" value="submit" />
      </div>
    </div>
  </form>
</div>
